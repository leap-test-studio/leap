{
  "schema": {
    "properties": {
      "settings": {
        "type": "object",
        "properties": {
          "method": {
            "type": "string",
            "enum": ["GET", "POST", "PUT", "PATCH", "DELETE", "HEAD", "OPTIONS"]
          },
          "host": {
            "type": "string"
          },
          "path": {
            "type": "string"
          },
          "timeout": {
            "type": "integer"
          },
          "header": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "key": {
                  "type": "string",
                  "title": "",
                  "description": "Key"
                },
                "value": {
                  "type": "string",
                  "title": "",
                  "description": "Value"
                }
              }
            }
          }
        }
      },
      "execSteps": {
        "type": "object",
        "properties": {
          "reqBody": {
            "type": "string"
          },
          "statusCode": {
            "type": "integer",
            "enum": [200, 201]
          },
          "resBody": {
            "type": "string"
          },
          "condition": {
            "type": "string"
          }
        }
      }
    }
  },
  "uischema": {
    "type": "VerticalLayout",
    "elements": [
      {
        "type": "HorizontalLayout",
        "elements": [
          {
            "type": "Control",
            "label": "Method",
            "scope": "#/properties/settings/properties/method"
          },
          {
            "type": "Control",
            "label": "Host",
            "scope": "#/properties/settings/properties/host",
            "options": {
              "suggest": "$AUTOCOMPLETE$"
            }
          },
          {
            "type": "Control",
            "label": "Path",
            "scope": "#/properties/settings/properties/path",
            "options": {
              "suggest": "$AUTOCOMPLETE$"
            }
          },
          {
            "type": "Control",
            "label": "Request Timeout in ms",
            "scope": "#/properties/settings/properties/timeout"
          }
        ]
      },
      {
        "type": "Control",
        "label": "Headers",
        "scope": "#/properties/settings/properties/header",
        "options": {
          "disableExpand": true,
          "showSortButtons": false,
          "rowTitle": "Header",
          "detail": {
            "type": "HorizontalLayout",
            "elements": [
              {
                "type": "Control",
                "scope": "#/properties/key"
              },
              {
                "type": "Control",
                "scope": "#/properties/value",
                "options": {
                  "suggest": "$AUTOCOMPLETE$"
                }
              }
            ]
          }
        }
      },
      {
        "type": "Control",
        "label": "Request Body",
        "scope": "#/properties/execSteps/properties/reqBody",
        "options": {
          "format": "json",
          "suggest": "$AUTOCOMPLETE$"
        }
      },
      {
        "label": "Expected Result",
        "type": "CustomGroup",
        "elements": [
          {
            "type": "Control",
            "label": "Response Status Code",
            "scope": "#/properties/execSteps/properties/statusCode"
          },
          {
            "type": "Control",
            "label": "Condition",
            "scope": "#/properties/execSteps/properties/condition",
            "options": {
              "suggest": "$AUTOCOMPLETE$"
            }
          },
          {
            "type": "Control",
            "label": "Expected Reponse Body",
            "scope": "#/properties/execSteps/properties/resBody",
            "options": {
              "format": "json"
            }
          }
        ]
      }
    ]
  }
}
